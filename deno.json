{
  "name": "@homeworkci/server",
  "version": "1.14.0",
  "exports": "./server/main.ts",
  "tasks": {
    "start": "deno run -A --watch server/main.ts",
    "dev:client": "cd client && npm run dev",
    "build:client": "cd client && npm run build",
    "migrate:logs": "deno run -A server/migrate-logs.ts",
    "cleanup": "deno run -A server/cleanup.ts",
    "reset": "deno run -A server/cleanup.ts --reset",
    "version": "deno run -A scripts/version.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno fmt --check && deno lint && cd client && npm run lint"
  },
  "imports": {
    "hono": "jsr:@hono/hono@^4.0.0",
    "@std/fs": "jsr:@std/fs@^0.218.0",
    "@std/path": "jsr:@std/path@^0.218.0",
    "@std/assert": "jsr:@std/assert@^0.218.0",
    "@db/sqlite": "jsr:@db/sqlite@^0.12",
    "cron-parser": "npm:cron-parser@^4.9.0",
    "uuid": "npm:uuid@^13.0.0",
    "jszip": "npm:jszip@^3.10.1"
  },
  "compilerOptions": {
    "strict": true
  },
  "lint": {
    "files": {
      "include": [
        "server",
        "modules",
        "scripts",
        "pipelines",
        "docker",
        "config",
        "README.md",
        "PLANNED_MODULES.md"
      ],
      "exclude": [
        "client",
        "logs",
        "tmp",
        "data"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "server",
        "modules",
        "scripts",
        "pipelines",
        "docker",
        "config",
        "README.md",
        "PLANNED_MODULES.md",
        "env.example",
        "deno.json"
      ],
      "exclude": [
        "client",
        "logs",
        "tmp",
        "data"
      ]
    },
    "options": {
      "useTabs": false,
      "indentWidth": 2,
      "lineWidth": 100
    }
  }
}
