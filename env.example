# HomeworkCI Environment Configuration
# Copy this file to .env and adjust values as needed:
#   cp env.example .env

# === Server Configuration ===

# Server port (internal, nginx proxies to this)
PORT=8008

# Server host binding
HOST=0.0.0.0

# === Client Configuration ===

# External port for web interface
CLIENT_PORT=80

# === Cleanup ===

# How long to keep sandbox directories (in hours)
SANDBOX_MAX_AGE_HOURS=24

# === Features ===

# Enable/disable scheduled pipeline execution
ENABLE_SCHEDULER=true

# === Docker Runner ===
# Enable to run pipeline steps in isolated Docker containers

# Enable/disable Docker runner module
DOCKER_ENABLED=false

# Host path for sandbox directory (required for Docker-in-Docker)
# This must match the bind mount path on the host
SANDBOX_HOST_PATH=/tmp/homeworkci

# Default Docker image for containers
DOCKER_DEFAULT_IMAGE=alpine:3.19

# Resource limits
DOCKER_MEMORY_LIMIT=512m
DOCKER_CPU_LIMIT=1

# Default network mode: none, bridge, host
DOCKER_NETWORK_DEFAULT=bridge

# Container execution timeout (ms)
DOCKER_TIMEOUT_MS=600000

